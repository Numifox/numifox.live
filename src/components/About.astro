---
const age = (): number => {
  const birthDate: Date = new Date(2005, 8, 16);
  const currentDate: Date = new Date();
  const age: number = currentDate.getFullYear() - birthDate.getFullYear();
  const month: number = currentDate.getMonth() - birthDate.getMonth();
  if (
    month < 0 ||
    (month === 0 && currentDate.getDate() < birthDate.getDate())
  ) {
    return age - 1;
  }
  return age;
};
